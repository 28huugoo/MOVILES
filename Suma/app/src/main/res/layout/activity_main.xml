<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="119dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/botonResta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonCalcular"
        android:layout_width="170dp"
        android:layout_height="71dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="27dp"
        android:background="#F80000"
        android:backgroundTint="#4CAF50"
        android:text="Button"
        app:iconTint="#00FF09"
        app:layout_constraintBottom_toTopOf="@+id/textResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonResta"
        app:layout_constraintTop_toBottomOf="@+id/edtN2" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="88dp"
        android:layout_height="98dp"
        android:text="DAMIAN"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="522dp" />

    <EditText
        android:id="@+id/edtN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/botonCalcular"
        app:layout_constraintStart_toStartOf="@+id/edtN1"
        app:layout_constraintTop_toBottomOf="@+id/edtN1" />

    <Button
        android:id="@+id/botonResta"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:text="Button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="356dp" />
</androidx.constraintlayout.widget.ConstraintLayout>